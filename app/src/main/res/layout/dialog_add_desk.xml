<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="25dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/animation_add_desk" />

    <TextView
        android:id="@+id/title_desks_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/newyork_medium_black"
        android:text="@string/dialog_newdesk_title"
        android:textColor="@color/secondary"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animation_view" />

    <EditText
        android:id="@+id/edittext_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        app:layout_constraintTop_toBottomOf="@id/title_desks_fragment"
        android:padding="10dp"
        android:inputType="text"
        android:hint="@string/dialog_newdesk_field_name"
        android:lines="1"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/edittext_name"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="@color/background2"
            android:fontFamily="@font/roboto_black"
            android:text="@string/dialog_newdesk_btn_close"
            android:textAllCaps="false"
            android:textColor="@color/secondary"
            app:cornerRadius="15dp"
            app:strokeColor="@color/secondary"
            app:strokeWidth="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="0dp"
            style="?android:attr/buttonBarButtonStyle" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_add_desk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="@color/secondary"
            app:cardCornerRadius="15dp"
            android:layout_gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/button_loading_animation"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                app:lottie_rawRes="@raw/btn_loading_animation"
                android:visibility="invisible"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/button_loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_newdesk_btn_addDesk"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_black"
                android:textSize="16dp"/>


        </androidx.cardview.widget.CardView>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>